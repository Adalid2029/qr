<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/default_margin"
    android:paddingVertical="@dimen/default_margin_medium"
    android:background="@drawable/background_icon_button"
    >
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:tint="@color/color_icon_button_icon_and_text"
        tools:src="@drawable/ic_copy"
        />
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_large"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_icon_button_icon_and_text"
        tools:text="Copy"
        style="@style/TextViewStyle"
        />
</LinearLayout>
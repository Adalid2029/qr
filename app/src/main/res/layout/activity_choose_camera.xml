<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/activity_choose_camera_title"
        style="@style/ToolbarWithBackButtonStyle"
        />
    <com.example.barcodescanner.feature.tabs.settings.camera.SettingsRadioButton
        android:id="@+id/button_back_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:text="@string/activity_choose_camera_back"
        />
    <com.example.barcodescanner.feature.tabs.settings.camera.SettingsRadioButton
        android:id="@+id/button_front_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_back_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:text="@string/activity_choose_camera_front"
        app:isDelimiterVisible="false"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/ic_arrow_back"
            style="@style/ToolbarStyle"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_margin"
            android:orientation="vertical"
            >
            <com.example.qrcodescanner.feature.qrcode.SquareImageView
                android:id="@+id/image_view_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/text_view_qr_code_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                tools:text="01.09.1993 12:00"
                style="@style/SecondaryTextViewStyle"
                />
            <TextView
                android:id="@+id/text_view_qr_code_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_very_small"
                android:layout_marginStart="@dimen/default_margin"
                tools:text="Data matrix"
                style="@style/SecondaryTextViewStyle"
                />
            <TextView
                android:id="@+id/text_view_qr_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_very_small"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_marginHorizontal="@dimen/default_margin"
                tools:text="Hello World!"
                style="@style/TextViewStyle"
                />
            <com.example.qrcodescanner.common.IconButton
                android:id="@+id/button_open_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_link"
                app:text="@string/activity_qr_code_open_link"
                android:visibility="gone"
                tools:visibility="visible"
                />
            <com.example.qrcodescanner.common.IconButton
                android:id="@+id/button_call_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_phone"
                app:text="@string/activity_qr_code_call_phone"
                android:visibility="gone"
                tools:visibility="visible"
                />
            <com.example.qrcodescanner.common.IconButton
                android:id="@+id/button_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_copy"
                app:text="@string/activity_qr_code_copy"
                />
            <com.example.qrcodescanner.common.IconButton
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_search"
                app:text="@string/activity_qr_code_search"
                />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="app_bar_layout,scroll_view"
        />

    <ProgressBar
        android:id="@+id/progress_bar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>